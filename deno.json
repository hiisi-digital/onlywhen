{
  "name": "@hiisi/onlywhen",
  "version": "0.4.0",
  "license": "MPL-2.0",
  "exports": {
    ".": "./mod.ts",
    "./transform": "./src/transform/mod.ts",
    "./cli": "./cli.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "lint": {
    "include": [
      "**/*.ts"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-await-in-loop",
        "no-console",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "prefer-ascii",
        "single-var-declarator",
        "verbatim-module-syntax"
      ],
      "exclude": [
        "no-console"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "**/*.ts",
      "*.md"
    ]
  },
  "tasks": {
    "cli": "deno run -A cli.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-run --allow-net",
    "test:watch": "deno test --allow-read --allow-write --allow-env --allow-run --allow-net --watch",
    "test:coverage": "deno test --allow-read --allow-write --allow-env --allow-run --allow-net --coverage=coverage/",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "check": "deno check mod.ts",
    "all": "deno task fmt && deno task lint && deno task check && deno task test",
    "prepublish": "deno task all"
  },
  "publish": {
    "include": [
      "mod.ts",
      "src/detection.ts",
      "src/cfg.ts",
      "src/features.ts",
      "src/combinators.ts",
      "src/decorators.ts",
      "src/match.ts",
      "src/types.ts",
      "src/mod.ts",
      "src/transform/mod.ts",
      "src/transform/types.ts",
      "src/transform/constants.ts",
      "src/transform/transformer.ts",
      "cli.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/",
      "scripts/",
      ".githooks/"
    ]
  }
}
